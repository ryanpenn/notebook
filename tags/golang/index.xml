&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>		&lt;span style="color:#a6e22e">cell&lt;/span>.&lt;span style="color:#a6e22e">Draw&lt;/span>(&lt;span style="color:#a6e22e">screen&lt;/span>)
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>	}
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>	&lt;span style="color:#75715e">// 显示FPS&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>	&lt;span style="color:#a6e22e">ebitenutil&lt;/span>.&lt;span style="color:#a6e22e">DebugPrint&lt;/span>(&lt;span style="color:#a6e22e">screen&lt;/span>, &lt;span style="color:#a6e22e">fmt&lt;/span>.&lt;span style="color:#a6e22e">Sprintf&lt;/span>(&lt;span style="color:#e6db74">&amp;#34;FPS: %0.2f&amp;#34;&lt;/span>, &lt;span style="color:#a6e22e">ebiten&lt;/span>.&lt;span style="color:#a6e22e">ActualFPS&lt;/span>()))
