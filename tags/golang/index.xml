&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>				&lt;span style="color:#a6e22e">cell&lt;/span>.&lt;span style="color:#a6e22e">SetColor&lt;/span>(&lt;span style="color:#a6e22e">color&lt;/span>.&lt;span style="color:#a6e22e">NRGBA&lt;/span>{&lt;span style="color:#a6e22e">R&lt;/span>: &lt;span style="color:#ae81ff">255&lt;/span>, &lt;span style="color:#a6e22e">G&lt;/span>: &lt;span style="color:#ae81ff">255&lt;/span>, &lt;span style="color:#a6e22e">B&lt;/span>: &lt;span style="color:#ae81ff">255&lt;/span>, &lt;span style="color:#a6e22e">A&lt;/span>: &lt;span style="color:#ae81ff">255&lt;/span>})
